<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shift.OnePunchMan">

    <ScrollView>
        <StackLayout BackgroundColor="#46656a" Padding="10">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Frame Grid.Row="0" HasShadow="True" BackgroundColor="#46656a" Margin="20,10" BorderColor="Black">
                    <Label Text="One Punch Man" TextColor="#233335" FontAttributes="Bold" FontSize="45"  HorizontalTextAlignment="Center"/>
                </Frame>
                <Image Grid.Row="1" Source="OPMPersonnage" />
                <Button x:Name="ButtonMenu" Grid.Row="4" CornerRadius="10" BackgroundColor="#233335" Text="BACK" TextColor="White" Clicked="Button_Menu" FontAttributes="Bold" FontSize="12" HeightRequest="50" HorizontalOptions="Center" TranslationY="-30"/>
            </Grid>

        </StackLayout>
    </ScrollView>
</ContentPage>